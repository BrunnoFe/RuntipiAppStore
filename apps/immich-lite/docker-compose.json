{
  "schemaVersion": 2,
  "$schema":"https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "immich_server_lite",
      "image": "ghcr.io/immich-app/immich-server:release",
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "DB_HOSTNAME",
          "value": "immich-db"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${APP_PASSWORD}"
        },
        {
          "key": "DB_DATABASE_NAME",
          "value": "immich"
        },
        {
          "key": "REDIS_HOSTNAME",
          "value": "immich-redis"
        },
        {
          "key": "IMMICH_MACHINE_LEARNING_ENABLED",
          "value": "false"
        },
        {
          "key": "IMMICH_METRICS",
          "value": "false"
        }
      ],
      "internalPort": 2283,
      "volumes": [
        {
          "hostPath": "/mnt/1TB_HDD/immich",
          "containerPath": "/usr/src/app/upload",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        }
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "devices": [
        "/dev/dri:/dev/dri"
      ],
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1.50",
            "memory": "3072M"
          }
        }
      },
      "dependsOn": [
        "immich-redis",
        "immich-db"
      ],
      "extraLabels": {
        "runtipi.managed": "true",
        "runtipi.appurn": "immich-lite"
      }
    },
    {
      "name": "immich_db_lite",
      "image": "ghcr.io/immich-app/postgres:14-vectorchord0.3.0-pgvectors0.2.0",
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${APP_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "immich"
        },
        {
          "key": "PG_DATA",
          "value": "/var/lib/postgresql/data"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1.50",
            "memory": "1536M"
          }
        }
      },
      "extraLabels": {
        "runtipi.managed": "true",
        "runtipi.appurn": "immich-lite"
      }
    },
    {
      "name": "immich_redis_lite",
      "image": "redis:6.2",
      "healthCheck": {
        "test": "redis-cli ping || exit 1"
      },
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "extraLabels": {
        "runtipi.managed": "true",
        "runtipi.appurn": "immich-lite"
      }
    }
  ]
}