{
  "version": "3.7",
  "services": [
    {
      "name": "immich",
      "image": "ghcr.io/immich-app/immich-server:release",
      "container_name": "immich_server_lite",
      "restart": "unless-stopped",
      "volumes": [
        {
          "type": "bind",
          "hostPath": "/mnt/1TB_HDD/immich",
          "containerPath": "/usr/src/app/upload",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "type": "bind",
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        }
      ],
      "environment": {
        "NODE_ENV": "production",
        "HOST": "0.0.0.0",
        "DB_HOSTNAME": "immich-db",
        "DB_USERNAME": "tipi",
        "DB_PASSWORD": "${DB_PASSWORD}",
        "DB_DATABASE_NAME": "immich",
        "REDIS_HOSTNAME": "immich-redis",
        "JWT_SECRET": "${JWT_SECRET}",
        "IMMICH_MACHINE_LEARNING_ENABLED": "false",
        "IMMICH_METRICS": "false"
      },
      "networks": [
        "tipi_main_network",
        "default"
      ],
      "depends_on": [
        "immich-redis",
        "immich-db"
      ],
      "devices": [
        "/dev/dri:/dev/dri"
      ],
      "labels": {
        "runtipi.managed": "true",
        "runtipi.appurn": "immich-lite",
        "traefik.enable": "true",
        "traefik.http.services.immich-lite.loadbalancer.server.port": "2283"
      },
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1.50",
            "memory": "3072M"
          }
        }
      }
    },
    {
      "name": "immich-db",
      "image": "ghcr.io/immich-app/postgres:14-vectorchord0.3.0-pgvectors0.2.0",
      "container_name": "immich_db_lite",
      "restart": "unless-stopped",
      "volumes": [
        {
          "type": "bind",
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "environment": {
        "POSTGRES_PASSWORD": "${DB_PASSWORD}",
        "POSTGRES_USER": "tipi",
        "POSTGRES_DB": "immich",
        "PG_DATA": "/var/lib/postgresql/data"
      },
      "networks": [
        "default"
      ],
      "labels": {
        "runtipi.managed": "true",
        "runtipi.appurn": "immich-lite"
      },
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1.50",
            "memory": "1536M"
          }
        }
      }
    },
    {
      "name": "immich-redis",
      "image": "redis:6.2",
      "container_name": "immich_redis_lite",
      "restart": "unless-stopped",
      "healthcheck": {
        "test": "redis-cli ping || exit 1"
      },
      "networks": [
        "default"
      ],
      "labels": {
        "runtipi.managed": "true",
        "runtipi.appurn": "immich-lite"
      },
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      }
    }
  ],
  "networks": {
    "tipi_main_network": {
      "external": true
    }
  }
}