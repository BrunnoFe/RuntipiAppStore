{
  "services": [
    {
      "name": "immich",
      "image": "ghcr.io/immich-app/immich-server:release",
      "container_name": "immich_server_lite",
      "restart": "unless-stopped",
      "volumes": [
        {
          "type": "bind",
          "hostPath": "${UPLOAD_LOCATION}",
          "containerPath": "/usr/src/app/upload",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "type": "bind",
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        }
      ],
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "DB_HOSTNAME",
          "value": "immich-db"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "ENABLE_MAPBOX",
          "value": "false"
        },
        {
          "key": "DB_DATABASE_NAME",
          "value": "immich"
        },
        {
          "key": "REDIS_HOSTNAME",
          "value": "immich-redis"
        },
        {
          "key": "JWT_SECRET",
          "value": "${JWT_SECRET}"
        },
        {
          "key":"IMMICH_MACHINE_LEARNING_ENABLED",
          "value":"false"
        },
        {
          "key":"IMMICH_METRICS",
          "value":"false"
        }
      ],
      "networks": [
        "tipi_main_network"
      ],
      "depends_on": [
        "immich-redis",
        "immich-db"
      ],
      "devices": [
        "/dev/dri:/dev/dri"
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1.50",
            "memory": "3072M"
          }
        }
      }
    },
    {
      "name": "immich-db",
      "image": "ghcr.io/immich-app/postgres:14-vectorchord0.3.0-pgvectors0.2.0",
      "container_name": "immich_db_lite",
      "restart": "unless-stopped",
      "volumes": [
        {
          "type": "bind",
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "immich"
        },
        {
          "key": "PG_DATA",
          "value": "/var/lib/postgresql/data"
        }
      ],
      "networks": [
        "tipi_main_network"
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1.50",
            "memory": "1536M"
          }
        }
      }
    },
    {
      "name": "immich-redis",
      "image": "redis:6.2",
      "container_name": "immich_redis_lite",
      "restart": "unless-stopped",
      "healthcheck": {
        "test": "redis-cli ping || exit 1"
      },
      "networks": [
        "tipi_main_network"
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "10m",
          "max-file": "3"
        }
      }
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}